extends layout

block content

  .panel.panel-primary.panel-fixed
    .panel-heading
        h3.panel-title Find Places
      .panel-body
        .form-group
          button#coffee-layer.btn.btn-primary.btn-lg Coffee
          button#lai-layer.btn.btn-primary.btn-lg Location Affordability
          button#metro-layer.btn.btn-primary.btn-lg Metro
        .form-inline
          .checkbox
            label
              input#useMapExtent(type='checkbox', checked='checked')
              | Search map only
          button#btnSearch.btn.btn-success Go
          button#btnClear.btn.btn-default Clear
  div#mapDiv


  script(src='/javascripts/bootstrap-map-path.js')
  script(src='http://js.arcgis.com/3.9compact')
  script(src='/javascripts/bootstrap-map.js')
  script(src='http://code.jquery.com/jquery-1.10.1.min.js')
  script(src='//netdna.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.min.js')
